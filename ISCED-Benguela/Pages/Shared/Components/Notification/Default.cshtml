@model Task<List<Modelos.Comentarios>>
<div id="dropdown1" class="dropdown-content notifications">
    <div class="notifications-title">Notificações</div>
    @foreach (var item in (await Model).Where(x=>!x.Respondido))
    {
        <div class="card">
            <div class="card-content">
                <span class="card-title">@item.Estudante.Nome @item.Estudante.Sobrenome</span>
                <p>@item.Comentario</p>
            </div>
            <div class="card-action"><a asp-page="/Admin/Materia/Respostas/Index" asp-route-id="@item.EstudanteID">Responder</a></div>
        </div>
    }
</div>
